#!/bin/bash
#sleep 0.5
pkill -9 hyprpaper
if [[ -z $1 ]]
then
	echo -e "$HOME/wall/$(ls ~/wall | shuf | head -n1)" > /tmp/walnow; 
elif [[ $1 == "s" ]]
then
	echo "$(sxiv ~/wall -tqfo)" > /tmp/walnow
fi
wal -qi $(cat /tmp/walnow)
swww img $(cat /tmp/walnow) --transition-type grow --transition-pos 0.854,0.977 --transition-step 90 --transition-fps 144
~/.config/hypr/scripts/changer
wal-telegram -w &
pywal-discord
convert -size 75x75 $(cat /tmp/walnow) /tmp/wall.jpg
notify-send "wall updated üñåÔ∏è" -i /tmp/wall.jpg
#nwg-panel -sigdwl 10 &
killall waybar 
#exit 0
waybar -s ~/.config/waybar/white.css & disown
killall nwg-dock-hyprland
hyprctl reload
nwg-dock-hyprland -i 60 -hd 0 -d & disown #-c nwg-drawer & disown 
#if [[ $(cat /tmp/walnow) == "/home/shadow/wall/wallhaven-jxy6vp.png" ]]; then
#	openrgb -c red -b 100 
#else
#	openrgb -c red -b 0 
#fi
