{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "center",
    "positionY": "top",
    "control-center-positionX": "right",
    "control-center-positionY": "top",
    "control-center-margin-top": 5,
    "control-center-margin-bottom": 1500,
    "control-center-margin-right": 200,
    "control-center-margin-left": 10,
    "notification-icon-size": 48,
    "notification-body-image-height": 100,
    "notification-body-image-width": 200,
    "timeout": 5,
    "timeout-low": 5,
    "timeout-critical": 0,
    "fit-to-screen": true,
    "control-center-width": 400,
    "notification-window-width": 350,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "dnd",
        "buttons-grid",
        "backlight",
        "volume",
        "mpris",
        "title",
        "notifications"
    ],
    "widget-config": {
        "title": {
            "text": "󰂚  :: Notifications",
            "clear-all-button": true,
            "button-text": "󰎟 "
        },
        "dnd": {
            "text": "Do Not Disturb"
        },
        "label": {
            "max-lines": 1,
            "text": "Notification Center"
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 12
        },
        "volume": {
            "label": "󰕾 "
        },
        "backlight": {
            "label": "󰃟 "
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "󰈈",
		    "type": "normal",
		    "active": false,
                    "command": "/home/shadow/.config/hypr/scripts/eyesafe"
                },
                {
                    "label": "󰦛",
		    "type": "normal",
		    "active": false,
                    "command": "hyprctl reload"
                },
                {
                    "label": "󰩅",
		    "type": "toggle",
		    "active": false,
                    "command": "/home/shadow/.config/swaync/scripts/anc"

                },
                {
                    "label": "󰟅",
		    "type": "toggle",
		    "active": false,
                    "command": "/home/shadow/.config/swaync/scripts/tra"

                }
            ]
        }
    }
}
